.PHONY	: all install clean tags dist doc

all: tags
	${PYTHON_EXE} setup.py build

dist:
	${PYTHON_EXE} setup.py sdist

install: tags
	${PYTHON_EXE} setup.py install

clean:
	rm -Rf build
	rm -f tags

tags:
	ctags -R src || true

doc:
	rm -Rf doc/reference 
	mkdir doc/reference 
	${PYTHON_EXE} `which epydoc` \
	  -o doc/reference -n hedge -v --no-private --html \
	  --exclude-introspect="hedge\._internal" \
	  hedge
